<Window x:Class="TaskManagerApp.Views.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="任务编辑" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="标题：" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Width="250" Margin="5"/>

        <TextBlock Text="描述：" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,5"/>
        <TextBox Text="{Binding Description}" Grid.Row="1" Grid.Column="1" Height="80" AcceptsReturn="True" TextWrapping="Wrap" Margin="5"/>

        <TextBlock Text="截止日期：" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <DatePicker SelectedDate="{Binding DueDate}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="优先级：" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding PriorityOptions}" SelectedItem="{Binding Priority}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="状态：" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding Status}" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="分类：" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="80"/>
            <Button Content="取消" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="80" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
